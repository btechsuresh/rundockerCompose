pipeline{
	agent any
	stages{
		stage("Start Grid"){
			steps{
				bat "docker-compose up -d --no-color hub chrome firefox"			
			}			
		}
		stage("Running the Tests"){
		    steps{
			    bat "docker-compose up search-module"
			}
		}	
	
	}
	post{
	    always{
	        archiveArtifacts artifacts: 'output/**'
		    bat "docker-compose down"
		
	  }
	}
  
  
  
  }
